# Local Development Environment Configuration
# Copy this file to .env for local development

# Database - SQLite for development (recommended)
DATABASE_URL=sqlite:///./storage/pdf_processor.db

# For PostgreSQL (uncomment and configure if needed)
# DATABASE_URL=postgresql://pdfuser:pdfpass@localhost:5432/pdf_processor

# Redis - Default development configuration
REDIS_URL=redis://localhost:6380

# Storage paths
STORAGE_PATH=./storage
MAX_FILE_SIZE=104857600

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=PDF Processor API - Development

# CORS - Allow frontend development servers
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:5173"]

# Security - Change these for production!
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Processing Configuration
CELERY_WORKER_CONCURRENCY=2
PROCESSING_TIMEOUT=300

# Development flags
DEBUG=true
RELOAD=true